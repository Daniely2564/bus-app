<!-- Masthead -->
<header class="masthead text-white text-center">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-xl-9 mx-auto">
                <h1 class="mb-5">Search</h1>
            </div>
            <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
                <form method="post" action="/search/bus">
                    <div class="form-row mb-4">
                        <div class="col-12 col-md-3">
                            <h2>By</h2>
                        </div>
                        <div class="col-12 col-md-9 mb-2 mb-md-0">
                            <select name="type" class="form-control">
                                <option value="stop" {{#if busStop}}selected{{/if}}>Bus Stop</option>
                                <option value="no" {{#if busNo}}selected{{/if}}>Bus No.</option>
                                <option value="destination">Destination</option>
                            </select>
                        </div>
                    </div>
            </div>

            <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
                <div class="form-row">
                    <div class="col-12 col-md-9 mb-2 mb-md-0">
                        <input type="text" name="value" {{#if value}}value="{{value}}"{{/if}} class="form-control form-control-lg text-center">
                    </div>
                    <div class="col-12 col-md-3">
                        <button type="submit" class="btn btn-block btn-lg btn-primary">Search</button>
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>
</header>
{{#if error}}
<div class="text-center">
    <div class="alert alert-danger" role="alert">
        {{error}}
    </div>
</div>
{{/if}}
{{#if list}}
<ul class="list-group">
    {{#each list}}
    <li class="list-group-item d-flex justify-content-between align-items-center" style="font-size:150%">
        {{this.dest}}
        <span class="badge badge-primary badge-pill" style="font-size:110%">{{this.min}}</span>
    </li>
  {{/each}}
</ul>
{{/if}}
{{#if busOptions}}
{{#each busOptions}}
<form method="post" action="/dest">
    <input type="hidden" name="link" value="{{this.attr}}"/>
    <button class="w-100 py-3" style="font-size:140%">{{this.text}}</button>
</form>
{{/each}}
{{/if}}
{{#if busItems}}
{{#each busItems}}
<form method="post" action="/search/bus">
    <input type="hidden" name="type" value="stop"/>
    <input type="hidden" name="value" value="{{this.attr}}"/>
    <button class="w-100 py-3" style="font-size:110%">{{this.text}}</button>
</form>
{{/each}}
{{/if}}
